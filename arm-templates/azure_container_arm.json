{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "containerGroups_name": {
            "defaultValue": "ffmpeglivestream01",
            "type": "String"
        },
        "m3u8_url": {
            "defaultValue": "m3u8_url",
            "type": "String"
        },
      "livepeer_key": {
            "defaultValue": "ef15-6p9j-vmm0-w55w",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2022-10-01-preview",
            "name": "[parameters('containerGroups_ffmpeglivestream01_name')]",
            "location": "eastus",
            "properties": {
                "sku": "Standard",
                "containers": [
                    {
                        "name": "[parameters('containerGroups_name')]",
                        "properties": {
                            "image": "jrottenberg/ffmpeg",
                            "command": [
                                "/bin/bash",
                                "-c",
                              "[concat('ffmpeg -fflags -igndts -hide_banner -i ', parameters('containerGroups_name'), ' -bsf:a aac_adtstoasc -c copy -f flv rtmp://rtmp.livepeer.com/live/', parameters('m3u8_url'))]"
                            ],
                            "ports": [
                                {
                                    "protocol": "TCP",
                                    "port": 80
                                }
                            ],
                            "environmentVariables": [],
                            "resources": {
                                "requests": {
                                    "memoryInGB": 1.5,
                                    "cpu": 1
                                }
                            }
                        }
                    }
                ],
                "initContainers": [],
                "restartPolicy": "OnFailure",
                "ipAddress": {
                    "ports": [
                        {
                            "protocol": "TCP",
                            "port": 80
                        }
                    ],
                    "type": "Public"
                },
                "osType": "Linux"
            }
        }
    ]
}
